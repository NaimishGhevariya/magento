<config>

	<modules>
		<Ccc_Vendor>
			<version>1.0.5</version>
		</Ccc_Vendor>
	</modules>

	<global>
		<models>
			<vendor>
				<class>Ccc_Vendor_Model</class>
				<resourceModel>vendor_resource</resourceModel>
			</vendor>

			<vendor_resource>
				<class>Ccc_Vendor_Model_Resource</class>
				<entities>
					<vendor>
						<table>vendor</table>
					</vendor>
					<vendor_datetime>
						<table>vendor_datetime</table>
					</vendor_datetime>
					<vendor_decimal>
						<table>vendor_decimal</table>
					</vendor_decimal>
					<vendor_int>
						<table>vendor_int</table>
					</vendor_int>
					<vendor_text>
						<table>vendor_text</table>
					</vendor_text>
					<vendor_varchar>
						<table>vendor_varchar</table>
					</vendor_varchar>
					<vendor_char>
						<table>vendor_char</table>
					</vendor_char>
					<eav_attribute>
						<table>vendor_eav_attribute</table>
					</eav_attribute>

					<vendor_product>
						<table>vendor_product</table>
					</vendor_product>
					<vendor_product_datetime>
						<table>vendor_product_datetime</table>
					</vendor_product_datetime>
					<vendor_product_decimal>
						<table>vendor_product_decimal</table>
					</vendor_product_decimal>
					<vendor_product_int>
						<table>vendor_product_int</table>
					</vendor_product_int>
					<vendor_product_text>
						<table>vendor_product_text</table>
					</vendor_product_text>
					<vendor_product_varchar>
						<table>vendor_product_varchar</table>
					</vendor_product_varchar>
					<vendor_product_char>
						<table>vendor_product_char</table>
					</vendor_product_char>
					<eav_productAttribute>
						<table>vendor_product_eav_attribute</table>
					</eav_productAttribute>

				</entities>
			</vendor_resource>
		</models>

		<resources>
			<vendor_setup>
				<setup>
					<module>Ccc_Vendor</module>
					<class>Ccc_Vendor_Model_Resource_Setup</class>
				</setup>
			</vendor_setup>
		</resources>

		<helpers>
			<vendor>
				<class>Ccc_Vendor_Helper</class>
			</vendor>
		</helpers>

		<blocks>
			<vendor>
				<class>Ccc_Vendor_Block</class>
			</vendor>
		</blocks>

	</global>

	<admin>
		<routers>
			<adminhtml>

				<args>
					<modules>
						<ccc_vendor>Ccc_Vendor_Adminhtml</ccc_vendor>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>

	<adminhtml>
		<layout>
			<updates>
				<vendor>
					<file>vendor.xml</file>
				</vendor>
			</updates>
		</layout>
	</adminhtml>

	<frontend>
		<secure_url>
			<vendor>/vendor/</vendor>
		</secure_url>
		<events>
			<controller_action_layout_load_before>
				<observers>
					<vendor_is_logged_in_observer>
						<class>vendor/observer</class>
						<method>beforeLoadLayout</method>
					</vendor_is_logged_in_observer>
				</observers>
			</controller_action_layout_load_before>
		</events>
		<routers>
			<vendor>
				<use>standard</use>
				<args>
					<module>Ccc_Vendor</module>
					<frontName>vendor</frontName>
				</args>
			</vendor>
		</routers>
		<layout>
			<updates>
				<vendor module="Ccc_Module">
					<file>vendor.xml</file>
				</vendor>
			</updates>
		</layout>
	</frontend>
	<default>
		<vendor>
			<account_share>
				<scope>1</scope>
			</account_share>
			<create_account>
				<confirm>0</confirm>
				<default_group>1</default_group>
				<tax_calculation_address_type>billing</tax_calculation_address_type>
				<email_domain>example.com</email_domain>
				<email_identity>general</email_identity>
				<email_template>vendor_create_account_email_template</email_template>
				<email_confirmation_template>vendor_create_account_email_confirmation_template</email_confirmation_template>
				<email_confirmed_template>vendor_create_account_email_confirmed_template</email_confirmed_template>
				<!-- <vat_frontend_visibility>0</vat_frontend_visibility> -->
			</create_account>
			<changed_account>
				<password_or_email_identity>general</password_or_email_identity>
				<password_or_email_template>vendor_changed_account_password_or_email_template</password_or_email_template>
			</changed_account>
			<default>
				<group>1</group>
			</default>
			<password>
				<forgot_email_identity>support</forgot_email_identity>
				<forgot_email_template>vendor_password_forgot_email_template</forgot_email_template>
				<remind_email_template>vendor_password_remind_email_template</remind_email_template>
				<reset_link_expiration_period>2</reset_link_expiration_period>
				<require_admin_user_to_change_user_password>1</require_admin_user_to_change_user_password>
			</password>
		</vendor>
		<admin>
			<security>
				<forgot_password_flow_secure>1</forgot_password_flow_secure>
				<forgot_password_email_times>5</forgot_password_email_times>
				<forgot_password_ip_times>5</forgot_password_ip_times>
			</security>
		</admin>
	</default>
