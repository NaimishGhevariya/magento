<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Ccc_User>
			<version>0.1.0</version>
		</Ccc_User>
	</modules>

	<admin>
		<routers>
			<user>
				<use>admin</use>
				<args>
					<module>Ccc_User</module>
					<frontName>user</frontName>
				</args>
			</user>
		</routers>
	</admin>

	<adminhtml>
		<menu>
			<user module="user">
				<title>User</title>
				<sort_order>100</sort_order>
				<children>
					<users module="user">
						<title>Manage User</title>
						<sort_order>0</sort_order>
						<action>user/adminhtml_user</action>
					</users>
				</children>
			</user>
		</menu>

		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<user>
							<title>User Module</title>
							<sort_order>200</sort_order>
						</user>
					</children>
				</admin>
			</resources>
		</acl>

		<layout>
			<updates>
				<user>
					<file>user.xml</file>
				</user>
			</updates>
		</layout>

	</adminhtml>

	<global>
		<blocks>
			<user>
				<class>Ccc_User_Block</class>
			</user>
			<user_admin>
				<class>Ccc_User_Block_Adminhtml</class>
			</user_admin>
		</blocks>

		<helpers>
			<user>
				<class>Mage_Core_Helper</class>
			</user>
		</helpers>

		<models>
			<ccc_user>
				<class>Ccc_User_Model</class>
				<resourceModel>ccc_user_resource</resourceModel>
			</ccc_user>
			<ccc_user_resource>
				<class>Ccc_User_Model_Resource</class>
				<entities>
					<data>
						<table>ccc_user_data</table>
					</data>
				</entities>
			</ccc_user_resource>
		</models>
		<resources>
			<user_setup>
				<setup>
					<module>Ccc_User</module>
				</setup>
			</user_setup>
		</resources>

	</global>
</config>